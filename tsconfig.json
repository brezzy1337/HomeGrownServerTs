{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "strict": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@src/*":["src/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules","__tests__", "coverage", "dist"]
} 